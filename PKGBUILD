pkgname=nuker
pkgver=0.1
pkgrel=1
pkgdesc="This package will eradicate your whole currently loaded bootable device with just a click of a button!"
arch=('any')
url="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
license=('MIT')
depends=('bash')

source=('nuker')
sha256sums=('SKIP')

package() {
    install -Dm755 nuker "$pkgdir/usr/bin/nuker"
}
